<form action="/login" method="post">
    <div>
        <h1>Login</h1>
    </div>
    
    
    <div class="form-group">
        <label for="">UserName</label>
        <input 
            class="err-mgs"
            type="text"
            name="username"
            id="username"
            placeholder="Enter Your UserName"
            required>
    </div>
    <div class="form-group">
        <label for="">PassWord</label>
        <input 
            class="err-mgs"
            type="password"
            name="password"
            id="password"
            placeholder="Enter Your PassWord"
            required>
    </div>
    <div>
        <input type="submit" value="login">
    </div>
</form>